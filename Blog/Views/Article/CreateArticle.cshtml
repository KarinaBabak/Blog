@model Blog.Models.ArticleViewModel

@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Добавление статьи</title>
    @Html.Partial("~/Views/Shared/Header.cshtml")
</head>
<body>
    <div id="main">
        <div id="left_content" style="background-image: url('/Content/images/add_article.jpg')">
            <div id="txt">
                <h1>Добавление статьи</h1>
            </div>
        </div>

        <div id="right_content">
            @Html.Partial("~/Views/Shared/TopMenu.cshtml")

            @using (@Html.BeginForm("CreateArticle", "Article"))
            {
                @Html.AntiForgeryToken()

    
                @Html.ValidationSummary(true, "", new { @class = "text-error" })
                
                @Html.LabelFor(m => m.Title)
                @Html.TextBoxFor(m => m.Title)
                @Html.ValidationMessageFor(m => m.Title)
                
    
                @Html.LabelFor(m => m.Content)
                @Html.TextAreaFor(m => m.Content)   
    
                @Html.LabelFor(m => m.Tags)
                @Html.TextBoxFor(m => m.Tags)

                @Html.Action("ShowAllSections", "Section")
                
                <input type="submit" id="createArticle" value="Добавить статью" class="button" />
            }

        </div>
    </div>
</body>
</html>
