@model IEnumerable<Blog.Models.CommentModel>


@if(Model.Count() != 0)
{ 

foreach(var comment in Model)
{
    if(User.IsInRole("admin") || (User.Identity.IsAuthenticated && (Convert.ToInt32(Profile.GetPropertyValue("Id")) == comment.SenderId)))
    {                
        @Ajax.ActionLink("×", "DeleteComment", "Comment", new { articleId = comment.ArticleId, commentId = comment.Id },
             new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "all_comments"})

        @comment.DatePublication
        @comment.Content
        @Html.ActionLink(@comment.Sender.Login, "ViewArticlesOfBlogger", new { controller = "Article", bloggerId = @comment.Sender.Id })

    }
}
}